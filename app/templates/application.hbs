{{! without contextual components }}
{{#paper-toolbar}}
 {{#paper-toolbar-tools}}

   {{#paper-sidenav-toggle name="left" class="hide-gt-sm" as |toggleAction|}}
     {{#paper-button iconButton=true raised=false onClick=(action toggleAction)}}
       {{paper-icon "menu"}}
     {{/paper-button}}
   {{/paper-sidenav-toggle}}



   {{#paper-button}}

    <h2>Ubikate en la UMSS</h2>
   {{/paper-button}}


<!-- // -->
<div class="paper-right">

{{#paper-menu width=4 as |menu|}}
    {{#paper-button onClick=(action "toggleMenu" target=menu) iconButton=true}}{{paper-icon "account_circle" class="md-menu-origin"}}{{/paper-button}}
  {{else}}

    {{#if user}}

      {{#paper-menu-item onClick=(transition-to 'users.show' user)}}
        {{paper-icon "person" class="md-menu-align-target"}}
          <span>{{user.username}}</span>
      {{/paper-menu-item}}

      {{paper-divider}}

      {{#paper-menu-item onClick=(route-action 'logout')}}
        {{paper-icon "exit_to_app" class="md-menu-align-target"}}
          <span>Logout</span>
      {{/paper-menu-item}}

    {{else}}

      {{#paper-menu-item onClick=(transition-to 'login')}}
        {{paper-icon "person_outline" class="md-menu-align-target"}}
          <span>Login</span>
      {{/paper-menu-item}}

      {{paper-divider}}

      {{#paper-menu-item onClick=(transition-to "users.new")}}
        {{paper-icon "person_add" class="md-menu-align-target"}}
          <span>Sign up</span>
      {{/paper-menu-item}}

    {{/if}}
{{/paper-menu}}
</div>

